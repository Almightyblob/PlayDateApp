<form class="form" action="/signup" method="POST">
<div class="form-fields">
    <h1 class="form-title">Sign up</h1>
    <input type="text" name="username"  minlength="3" placeholder="username">
    <input type="password" name="password" minlength="5" placeholder="********">
    <button class= "b-blue rot-135" type="submit">Create account</button>

{{#if errorMessage }}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
  </div>
</form>

<div class="signup-img">
<img src="/images/bee.png" alt="">
</div>
